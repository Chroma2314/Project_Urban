def single_root_words(root_word,*other_words):
    same_words = []
    root_word = root_word.lower()
    #new_list = [i.lower() for i in other_words]
    for i in other_words:
        if (root_word in i.lower()) or (i.lower() in root_word):
            same_words.append(i)
        else:
            continue
    return print(same_words)


single_root_words('ARt', 'totaL','FANart','ARtoo')
